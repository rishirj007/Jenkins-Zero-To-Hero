pipeline {
    agent any

    tools {
        maven 'Maven 3'       // configure this Maven tool name in Jenkins Global Tool Config
        nodejs 'NodeJS 18'    // configure this NodeJS tool name in Jenkins Global Tool Config
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build Java') {
            steps {
                dir('backend') {
                    sh 'mvn clean compile'
                }
            }
        }

        stage('Run Java') {
            steps {
                dir('backend') {
                    sh 'mvn exec:java'
                }
            }
        }

        stage('Install Node.js Packages') {
            steps {
                dir('frontend') {
                    sh 'npm install'
                }
            }
        }

        stage('Run Node.js App') {
            steps {
                dir('frontend') {
                    sh 'npm start'
                }
            }
        }
    }
}
